<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home"
        tools:context=".Control_TimePicker">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contoh TimePicker"
            style="@style/TextViewStyle"
            android:id="@+id/txtContoh"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="clock"
            android:numbersBackgroundColor="@color/purple_700"
            android:numbersSelectorColor="@color/colorAccent"
            android:numbersInnerTextColor="@color/colorSecondary"
            android:numbersTextColor="@color/white"
            android:headerBackground="@color/colorPrimary"
            android:id="@+id/time_picker"
            android:theme="@style/Widget.Material3.MaterialTimePicker.Clock"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/txtContoh"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Save"
            android:id="@+id/btn_save"
            android:background="@drawable/border_button"
            app:layout_constraintStart_toStartOf="@+id/btn_timepicker"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/time_picker"/>


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selanjutnya"
            style="@style/ButtonStyle"
            android:id="@+id/btn_timepicker"
            android:layout_marginBottom="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>