<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home"
        tools:context=".Control_Checkbox">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contoh Checkbox"
            style="@style/TextViewStyle"
            android:id="@+id/txtContoh"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makanan Favorit?"
            style="@style/TextViewStyle"
            android:fontFamily="@font/righteous"
            android:textColor="@color/purple_500"
            android:id="@+id/txtPertanyaan"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="232dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox
            android:id="@+id/checkbox_option_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naspad"
            android:checked="false"
            android:buttonTint="@color/purple_500"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/checkbox_option_2"
            app:layout_constraintEnd_toStartOf="@+id/checkbox_option_2"
            android:minHeight="48dp"/>

    <CheckBox
            android:id="@+id/checkbox_option_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bakso"
            android:checked="false"
            android:buttonTint="@color/teal_700"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:minHeight="48dp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPertanyaan"/>

    <CheckBox
            android:id="@+id/checkbox_option_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mie Gacoan"
            android:checked="false"
            android:buttonTint="@android:color/holo_red_light"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkbox_option_2"
            app:layout_constraintBaseline_toBaselineOf="@+id/checkbox_option_2"
            android:minHeight="48dp"/>

    <Button
            android:id="@+id/button_batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ButtonCancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.678"
            app:layout_constraintBottom_toBottomOf="@+id/button_kirim"/>

    <Button
            android:id="@+id/button_kirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ButtonSubmit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="200dp"
            app:layout_constraintHorizontal_bias="0.331"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selanjutnya"
            style="@style/ButtonStyle"
            android:id="@+id/btn_checkbox"
            android:layout_marginBottom="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>