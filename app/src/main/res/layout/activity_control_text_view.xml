<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home"
        tools:context=".Control_TextView">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contoh TextView"
            android:id="@+id/txtContoh"
            style="@style/TextViewStyle"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:fontFamily="@font/adlam_display"
            android:id="@+id/txtView"
            android:textColor="#FD3E3E"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.371"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:fontFamily="@font/paprika"
            android:id="@+id/txtView2"
            android:textColor="#A16FF8"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.535"
            app:layout_constraintVertical_bias="0.464"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:fontFamily="@font/hepta_slab_extralight"
            android:id="@+id/txtView3"
            android:textColor="@color/colorSecondary"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintVertical_bias="0.548"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:fontFamily="@font/righteous"
            android:id="@+id/txtView4"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintVertical_bias="0.63"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtExample"
            android:text="Hello World! full modified"
            android:textSize="24sp"
            android:textColor="#FF6200EE"
            android:fontFamily="@font/hepta_slab_extralight"
            android:textAlignment="center"
            android:gravity="center"
            android:maxLines="2"
            android:lineSpacingExtra="4dp"
            android:lineSpacingMultiplier="1.2"
            android:letterSpacing="0.05"
            android:textAllCaps="true"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="8dp"
            android:autoSizeTextType="uniform"
            android:padding="16dp"
            android:background="#DAC4F4"
            android:shadowColor="#090202"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="128dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selanjutnya"
            style="@style/ButtonStyle"
            android:id="@+id/btn_textview"
            android:layout_marginBottom="81dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.872"/>

</androidx.constraintlayout.widget.ConstraintLayout>