<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home"
        tools:context=".Control_EditText">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contoh EditText"
            style="@style/TextViewStyle"
            android:id="@+id/txtContoh"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>

    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Masukan Nama"
            android:ems="10"
            android:id="@+id/inputText"
            style="@style/EditTextStyle"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp"
            android:layout_marginEnd="61dp"
            app:layout_constraintHorizontal_bias="0.487"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_hello"/>

    <Button
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:text="Say Hello"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:id="@+id/btn_hello"
            android:fontFamily="@font/adlam_display"
            android:backgroundTint="@color/purple_200"
            app:layout_constraintEnd_toEndOf="@+id/inputText"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="412dp"
            android:layout_marginEnd="61dp"
            app:layout_constraintStart_toStartOf="@+id/inputText"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selanjutnya"
            style="@style/ButtonStyle"
            android:id="@+id/btn_edittext"
            android:layout_marginBottom="81dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.872"/>

</androidx.constraintlayout.widget.ConstraintLayout>