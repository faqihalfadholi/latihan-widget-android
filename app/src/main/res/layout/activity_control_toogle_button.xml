<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home"
        tools:context=".Control_ToogleButton">


    <TextView
            android:id="@+id/txtContoh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contoh ToggleButton"
            style="@style/TextViewStyle"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ToggleButton
            android:id="@+id/toggle_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Suka Nasi Padang"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_200"
            android:background="@drawable/rounded_button"
            android:textOff="Gak Suka Nasi Padang"
            app:layout_constraintTop_toBottomOf="@id/txtContoh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.513"/>

    <Button
            android:id="@+id/button_kirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ButtonSubmit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="248dp"
            app:layout_constraintHorizontal_bias="0.498"/>


    <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/material_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suka Mie Gacoan?      "
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/adlam_display"
            android:padding="10sp"
            android:textSize="16sp"
            android:minHeight="48dp"
            android:thumbTint="@color/teal_700"
            android:trackTint="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="312dp"
            app:layout_constraintHorizontal_bias="0.497"/>

    <TextView
            android:id="@+id/toggle_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suka Bakso?"
            android:padding="5sp"
            android:fontFamily="@font/adlam_display"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/toggle"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@+id/toggle"
            app:layout_constraintBottom_toBottomOf="@+id/toggle"
            app:layout_constraintStart_toStartOf="@+id/material_switch"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.576"/>

    <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Gak"
            android:textOn="Suka"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_200"
            android:background="@drawable/rounded_button"
            app:layout_constraintTop_toBottomOf="@+id/toggle_button_1"
            android:layout_marginTop="36dp"
            app:layout_constraintBottom_toTopOf="@+id/material_switch"
            app:layout_constraintVertical_bias="0.027"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.681"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selanjutnya"
            style="@style/ButtonStyle"
            android:id="@+id/btn_tooglebutton"
            android:layout_marginBottom="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
