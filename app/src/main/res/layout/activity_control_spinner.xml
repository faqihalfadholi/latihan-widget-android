<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home"
        tools:context=".Control_Spinner">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contoh Spinner"
            style="@style/TextViewStyle"
            android:id="@+id/txtContoh"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hobi apa?"
            android:textColor="@color/purple_700"
            style="@style/TextViewStyle"
            android:id="@+id/txtContoh2"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginTop="172dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/spinner_simple"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="suka planet apa?"
            style="@style/TextViewStyle"
            android:id="@+id/txtContoh3"
            android:textSize="25sp"
            android:textColor="@color/purple_700"
            android:textAlignment="center"
            android:layout_marginTop="308dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintBottom_toTopOf="@+id/spinner_custom"/>

    <Spinner
            android:id="@+id/spinner_simple"
            android:layout_width="300dp"
            android:background="@drawable/rounded_button"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:entries="@array/food_options"
            android:prompt="@string/prompt_food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="216dp"
            android:minHeight="48dp"
            app:layout_constraintHorizontal_bias="0.504"/>

    <Spinner
            android:id="@+id/spinner_custom"
            android:layout_width="300dp"
            android:textAlignment="center"
            android:background="@drawable/gradient_button"
            android:layout_height="wrap_content"
            android:prompt="@string/prompt_planet"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/spinner_simple"
            android:layout_marginTop="372dp"
            android:minHeight="48dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selanjutnya"
            style="@style/ButtonStyle"
            android:id="@+id/btn_spinner"
            android:layout_marginBottom="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
</androidx.constraintlayout.widget.ConstraintLayout>